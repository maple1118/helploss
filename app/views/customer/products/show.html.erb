<div class="container">
  <div class="row">
    <div class="body" style>
      <div>
        <%= attachment_image_tag @product, :image, :size =>'500x500' %>
      </div>
      <div>
        <ul><%= @product.name %></ul>
        <ul><%= @product.introduction %></ul>
        <ul><%= @product.price %>円（税込）</ul>
      </div>
      <%= form_with model: [:customer, @cart], local:true do |f| %>
          <%= f.select :quantity, options_for_select((1..10).to_a) , include_blank: "個数選択", selected: 1 %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.submit 'カートに入れる', class: 'btn btn-success btn-sm ml-5'  %>
        <% end %>
    </div>
  </div>
</div>