<body class="bg-light">
  <div class="container">
    <main>
      <div class="py-5 text-center">
        <div><%= image_tag 'letter-2107927_1920.png', size: '50x50' %></div>
        <h2>新規登録フォーム</h2>

      </div>
      <div class="row g-3">
        <div class="col-md-10 col-lg-10">
          <h4 class="md-4">情報入力</h4>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/customers/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :名前　　　　　　　　　　　　　　　　　　　 %>
              <%= f.text_field :name, autofocus: true, size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :名前フリガナ　　　　　　　　　　　　　　　 %>
              <%= f.text_field :name_kana, autofocus: true, size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :メールアドレス　　　　　　　　　　　　　　 %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :郵便番号　　　　　　　　　　　　　　　　　 %>
              <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", id:"customer_postcode", size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :県　　　　　　　　　　　　　　　　　　　　 %>
              <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, id:"customer_prefecture_code" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :市町村区　　　　　　　　　　　　　　　　　 %>
              <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city", id:"customer_address_city", size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :それ以降の住所　　　　　　　　　　　　　　 %>
              <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street", id:"customer_address_street", size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :電話番号（ハイフンなし）　　　　　　　　　 %>
              <%= f.text_field :phone_namber, autofocus: true, autocomplete: "email", size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em><%= @minimum_password_length %>文字以上　　　　　　　　　　　</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", size: "60x20" %>
            </div>
            </br>

            <div class="field">
              <%= f.label :パスワード確認　　　　　　　　　　　　　　 %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "60x20" %>
            </div>
            </br>

            <div class="actions">
              <%= f.submit "登録する", class: "btn btn-primary btn-lg btn-block" %>
            </div>
            </br>
          <% end %>

          <%= render "devise/customers/shared/links" %>

          <script>
            $(function() {
            return $('#customer_postcode').jpostal({
              postcode: ['#customer_postcode'],
              address: {
                '#customer_prefecture_code': '%3',
                '#customer_address_city': '%4',
                '#customer_address_street': '%5%6%7',
              },
            });
          });
          </script>
        </div>
      </div>
    </main>
  </div>
</body>


