<div class="container">
  <div class="row">
    <div class"col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h1>商品編集</h1>
        <%= form_with model: [:admin, @product], local:true do |f| %>
          <div>
            <%= attachment_image_tag @product, :image, :size =>'100x100' %></br>
            <%= f.attachment_field :image %>
          </div>
        
          <div>
            <%= f.label :name, "商品名" %>
            <%= f.text_field :name %>
          </div>
        
          <div>
            <%= f.label :introduction, "商品説明" %>
            <%= f.text_area :introduction %>
          </div>
        
          <div>
            <%= f.label :price %>
            <%= f.text_field :price %>円<br>
          </div>
        
          <%= f.submit "編集", class: "btn btn-primary" %>
        
        <% end %>
    </div>
  </div>
</div>

