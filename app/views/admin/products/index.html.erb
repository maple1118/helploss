<div class="container">
  <div class="pricing-header px-3 py-3 pt-md-5 pb-md4 max-auto text-center">
      <h1>商品一覧</h1>
  </div>
</div>

<div class="container">
  <div class="p-3 my-3">
    <%= link_to "NEW ITEMS", new_admin_product_path, class:"btn btn-info" %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>価格</th>
            </tr>
          </thead>

          <% @products.each do |product| %>
          <tbody>
            <tr>
              <td><%= product.id %></td>
              <td><%= link_to product.name, admin_product_path(product.id) %></td>
              <td><%= product.price %>円</td>
            </tr>
          </tbody>
          <% end %>
        </table>
  </div>
</div>